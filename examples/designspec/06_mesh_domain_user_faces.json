{
  "schema": {
    "name": "aog_designspec",
    "version": "1.0.0",
    "compatible_with": ["1.0.x"]
  },
  "meta": {
    "name": "06_mesh_domain_user_faces",
    "description": "Demonstrates MeshDomain with user-defined face planes. The mesh is loaded from an asset file, and face planes are explicitly defined for port placement. This showcases port placement on mesh faces and canonical face naming.",
    "seed": 66666,
    "input_units": "mm",
    "tags": ["mesh", "faces", "port_placement", "user_defined"]
  },
  "policies": {
    "resolution": {
      "input_units": "mm",
      "min_channel_diameter": 0.1,
      "min_voxels_across_feature": 4,
      "max_voxels": 2000000,
      "auto_relax_pitch": true,
      "pitch_step_factor": 1.5,
      "embed_pitch_factor": 1.0,
      "max_voxels_embed": 1500000
    },
    "domain_meshing": {
      "cache_meshes": true,
      "emit_warnings": true,
      "target_face_count": 25000
    },
    "growth": {
      "enabled": true,
      "backend": "space_colonization",
      "max_iterations": 80,
      "step_size": 0.3,
      "min_segment_length": 0.2,
      "backend_params": {
        "influence_radius": 1.5,
        "kill_radius": 0.4,
        "perception_angle": 90,
        "num_attraction_points": 150
      }
    },
    "collision": {
      "enabled": true,
      "check_collisions": true,
      "collision_clearance": 0.1
    },
    "ports": {
      "enabled": true,
      "face": "top",
      "pattern": "explicit",
      "projection_mode": "clamp_to_face",
      "ridge_width": 0.1,
      "ridge_clearance": 0.1,
      "port_margin": 0.3,
      "disk_constraint_enabled": true,
      "ridge_constraint_enabled": true,
      "placement_fraction": 0.7
    },
    "channels": {
      "enabled": false
    },
    "composition": {
      "repair_enabled": true,
      "union_before_embed": true,
      "repair_fill_holes": true,
      "keep_largest_component": true,
      "min_component_volume": 0.001
    },
    "embedding": {
      "voxel_pitch": null,
      "use_resolution_policy": true,
      "auto_adjust_pitch": true,
      "max_voxels": 1500000,
      "fallback": "auto",
      "preserve_ports_enabled": true,
      "preserve_mode": "recarve",
      "carve_radius_factor": 1.2,
      "carve_depth": 1.5,
      "output_domain_with_void": true,
      "output_void_mesh": true,
      "output_shell": false
    },
    "validity": {
      "check_watertight": true,
      "check_components": true,
      "check_min_diameter": false,
      "check_open_ports": true,
      "check_bounds": true,
      "check_void_inside_domain": true,
      "max_components": 1
    },
    "open_port": {
      "enabled": true,
      "probe_radius_factor": 1.2,
      "probe_length": 1.5,
      "min_connected_volume_voxels": 10,
      "mode": "voxel_connectivity",
      "local_region_size": 4.0,
      "max_voxels_roi": 300000,
      "auto_relax_pitch": true
    },
    "repair": {
      "voxel_repair_enabled": true,
      "auto_adjust_pitch": true,
      "max_pitch_steps": 3,
      "pitch_step_factor": 1.5,
      "fill_voxels": true,
      "remove_small_components_enabled": true,
      "min_component_faces": 100,
      "min_component_volume": 0.001,
      "fill_holes_enabled": true,
      "smooth_enabled": false
    },
    "output": {
      "output_dir": "./out/06_mesh_domain_user_faces",
      "output_units": "mm",
      "naming_convention": "default",
      "save_intermediates": true,
      "save_reports": true,
      "output_stl": true,
      "output_json": true
    }
  },
  "domains": {
    "mesh_domain": {
      "type": "box",
      "x_min": -10,
      "x_max": 10,
      "y_min": -10,
      "y_max": 10,
      "z_min": -5,
      "z_max": 5,
      "faces": {
        "top": {
          "plane": {
            "point": [0, 0, 5],
            "normal": [0, 0, 1]
          },
          "region": {
            "type": "rectangle",
            "center": [0, 0, 5],
            "width": 18,
            "height": 18
          }
        },
        "bottom": {
          "plane": {
            "point": [0, 0, -5],
            "normal": [0, 0, -1]
          },
          "region": {
            "type": "rectangle",
            "center": [0, 0, -5],
            "width": 18,
            "height": 18
          }
        },
        "front": {
          "plane": {
            "point": [0, 10, 0],
            "normal": [0, 1, 0]
          },
          "region": {
            "type": "rectangle",
            "center": [0, 10, 0],
            "width": 18,
            "height": 8
          }
        }
      }
    }
  },
  "components": [
    {
      "id": "mesh_network",
      "domain_ref": "mesh_domain",
      "ports": {
        "inlets": [
          {
            "name": "inlet_top",
            "position": [0, 0, 5],
            "direction": [0, 0, -1],
            "radius": 0.3,
            "vessel_type": "arterial",
            "face": "top"
          }
        ],
        "outlets": [
          {
            "name": "outlet_bottom",
            "position": [0, 0, -5],
            "direction": [0, 0, 1],
            "radius": 0.25,
            "vessel_type": "venous",
            "face": "bottom"
          }
        ]
      },
      "build": {
        "type": "backend_network",
        "backend": "space_colonization",
        "backend_params": {
          "influence_radius": 1.5,
          "kill_radius": 0.4,
          "perception_angle": 90,
          "num_attraction_points": 150
        }
      },
      "save_artifacts": {
        "network": "artifacts/mesh_network.json",
        "void_mesh": "artifacts/mesh_network_void.stl"
      }
    }
  ],
  "composition": {
    "save_union": "artifacts/union_void.stl"
  },
  "embedding": {
    "enable": true,
    "outputs": {
      "domain_with_void": "domain_with_void.stl",
      "void_mesh": "void_union.stl"
    }
  },
  "validity": {
    "enable": true,
    "save_report": "validity_report.json"
  },
  "outputs": {
    "artifacts_dir": "artifacts",
    "named": {
      "run_report": "run_report.json"
    }
  }
}
