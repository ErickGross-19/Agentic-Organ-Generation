{
  "schema": {
    "name": "aog_designspec",
    "version": "1.0.0",
    "compatible_with": ["1.0.x"]
  },
  "meta": {
    "name": "11_kary_backend",
    "description": "Demonstrates the K-ary recursive tree backend with stable ID allocation. Creates a K-bifurcation tree structure with configurable branching factor, levels, and angle parameters.",
    "seed": 111111,
    "input_units": "mm",
    "tags": ["kary_tree", "backend", "bifurcation", "recursive", "stable_id"]
  },
  "policies": {
    "resolution": {
      "input_units": "mm",
      "min_channel_diameter": 0.05,
      "min_voxels_across_feature": 4,
      "max_voxels": 3000000,
      "auto_relax_pitch": true,
      "pitch_step_factor": 1.5,
      "embed_pitch_factor": 1.0,
      "max_voxels_embed": 2000000
    },
    "domain_meshing": {
      "cache_meshes": true,
      "emit_warnings": true,
      "target_face_count": 30000
    },
    "growth": {
      "enabled": true,
      "backend": "kary_tree",
      "max_iterations": 150,
      "step_size": 0.2,
      "min_segment_length": 0.1,
      "backend_params": {
        "K": 3,
        "num_levels": 5,
        "terminal_radius": 0.03,
        "angle_deg": 40.0,
        "angle_decay": 0.85,
        "length_decay": 0.8,
        "boundary_mode": "strict"
      }
    },
    "collision": {
      "enabled": true,
      "check_collisions": true,
      "collision_clearance": 0.05
    },
    "ports": {
      "enabled": true,
      "face": "top",
      "pattern": "explicit",
      "projection_mode": "clamp_to_face",
      "ridge_width": 0.3,
      "ridge_clearance": 0.3,
      "port_margin": 0.4,
      "disk_constraint_enabled": true,
      "ridge_constraint_enabled": true,
      "placement_fraction": 0.7
    },
    "channels": {
      "enabled": false
    },
    "composition": {
      "repair_enabled": true,
      "union_before_embed": true,
      "repair_fill_holes": true,
      "keep_largest_component": true,
      "min_component_volume": 0.0001
    },
    "embedding": {
      "voxel_pitch": null,
      "use_resolution_policy": true,
      "auto_adjust_pitch": true,
      "max_voxels": 2000000,
      "fallback": "auto",
      "preserve_ports_enabled": true,
      "preserve_mode": "recarve",
      "carve_radius_factor": 1.2,
      "carve_depth": 1.5,
      "output_domain_with_void": true,
      "output_void_mesh": true,
      "output_shell": false
    },
    "validity": {
      "check_watertight": true,
      "check_components": true,
      "check_min_diameter": false,
      "check_open_ports": true,
      "check_bounds": true,
      "check_void_inside_domain": true,
      "max_components": 1
    },
    "open_port": {
      "enabled": true,
      "probe_radius_factor": 1.2,
      "probe_length": 1.5,
      "min_connected_volume_voxels": 10,
      "mode": "voxel_connectivity",
      "local_region_size": 4.0,
      "max_voxels_roi": 300000,
      "auto_relax_pitch": true
    },
    "repair": {
      "voxel_repair_enabled": true,
      "auto_adjust_pitch": true,
      "max_pitch_steps": 4,
      "pitch_step_factor": 1.5,
      "fill_voxels": true,
      "remove_small_components_enabled": true,
      "min_component_faces": 100,
      "min_component_volume": 0.0001,
      "fill_holes_enabled": true,
      "smooth_enabled": false
    },
    "output": {
      "output_dir": "./out/11_kary_backend",
      "output_units": "mm",
      "naming_convention": "default",
      "save_intermediates": true,
      "save_reports": true,
      "output_stl": true,
      "output_json": true
    }
  },
  "domains": {
    "cylinder_domain": {
      "type": "cylinder",
      "center": [0, 0, 0],
      "radius": 6,
      "height": 4
    }
  },
  "components": [
    {
      "id": "kary_tree_network",
      "domain_ref": "cylinder_domain",
      "ports": {
        "inlets": [
          {
            "name": "inlet_center",
            "position": [0, 0, 2],
            "direction": [0, 0, -1],
            "radius": 0.4,
            "vessel_type": "arterial"
          }
        ],
        "outlets": []
      },
      "build": {
        "type": "backend_network",
        "backend": "kary_tree",
        "backend_params": {
          "K": 3,
          "num_levels": 5,
          "terminal_radius": 0.03,
          "angle_deg": 40.0,
          "angle_decay": 0.85,
          "length_decay": 0.8,
          "boundary_mode": "strict"
        }
      },
      "save_artifacts": {
        "network": "artifacts/kary_tree_network.json",
        "void_mesh": "artifacts/kary_tree_void.stl"
      }
    }
  ],
  "composition": {
    "save_union": "artifacts/union_void.stl"
  },
  "embedding": {
    "enable": true,
    "outputs": {
      "domain_with_void": "domain_with_void.stl",
      "void_mesh": "void_union.stl"
    }
  },
  "validity": {
    "enable": true,
    "save_report": "validity_report.json"
  },
  "outputs": {
    "artifacts_dir": "artifacts",
    "named": {
      "run_report": "run_report.json"
    }
  }
}
