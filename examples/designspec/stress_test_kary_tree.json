{
  "schema": {
    "name": "aog_designspec",
    "version": "1.0.0",
    "compatible_with": ["1.0.x"]
  },
  "meta": {
    "name": "stress_test_kary_tree",
    "description": "Stress test scenario A: K-bifurcation (K-ary tree). Tests the limits of K-ary tree generation with fine voxelization. Goal: maximize density while embeddable.",
    "seed": 42,
    "input_units": "mm",
    "tags": ["stress_test", "kary_tree", "bifurcation", "scenario_a"]
  },
  "policies": {
    "resolution": {
      "input_units": "mm",
      "min_channel_diameter": 0.05,
      "min_voxels_across_feature": 4,
      "max_voxels": 10000000,
      "auto_relax_pitch": true,
      "pitch_step_factor": 1.5,
      "embed_pitch_factor": 1.0,
      "max_voxels_embed": 5000000
    },
    "domain_meshing": {
      "cache_meshes": true,
      "emit_warnings": true,
      "target_face_count": 50000
    },
    "growth": {
      "enabled": true,
      "backend": "kary_tree",
      "max_iterations": 200,
      "step_size": 0.2,
      "min_segment_length": 0.1,
      "backend_params": {
        "K": 4,
        "num_levels": 6,
        "terminal_radius": 0.025,
        "angle_deg": 45.0,
        "angle_decay": 0.9,
        "boundary_mode": "strict"
      }
    },
    "collision": {
      "enabled": true,
      "check_collisions": true,
      "collision_clearance": 0.05
    },
    "ports": {
      "enabled": true,
      "face": "top",
      "pattern": "explicit",
      "projection_mode": "clamp_to_face",
      "ridge_width": 0.5,
      "ridge_clearance": 0.5,
      "port_margin": 0.5
    },
    "channels": {
      "enabled": false
    },
    "composition": {
      "repair_enabled": true,
      "union_before_embed": true,
      "repair_fill_holes": true,
      "keep_largest_component": true,
      "min_component_volume": 0.0001
    },
    "embedding": {
      "voxel_pitch": null,
      "use_resolution_policy": true,
      "auto_adjust_pitch": true,
      "max_voxels": 5000000,
      "fallback": "auto",
      "preserve_ports_enabled": true,
      "preserve_mode": "recarve",
      "carve_radius_factor": 1.2,
      "carve_depth": 2.0,
      "output_domain_with_void": true,
      "output_void_mesh": true
    },
    "validity": {
      "check_watertight": true,
      "check_components": true,
      "check_min_diameter": false,
      "check_open_ports": true,
      "check_bounds": true,
      "max_components": 1
    },
    "repair": {
      "voxel_repair_enabled": true,
      "auto_adjust_pitch": true,
      "remove_small_components_enabled": true,
      "min_component_faces": 100
    },
    "output": {
      "output_dir": "./out/stress_test_kary_tree",
      "output_units": "mm",
      "save_intermediates": true,
      "save_reports": true,
      "output_stl": true,
      "output_json": true
    }
  },
  "domains": {
    "cylinder_domain": {
      "type": "cylinder",
      "center": [0, 0, 0],
      "radius": 5.0,
      "height": 2.0
    }
  },
  "components": [
    {
      "id": "kary_tree_net",
      "domain_ref": "cylinder_domain",
      "ports": {
        "inlets": [
          {
            "name": "inlet_center",
            "position": [0, 0, 1.0],
            "direction": [0, 0, -1],
            "radius": 0.5,
            "vessel_type": "venous"
          }
        ],
        "outlets": []
      },
      "build": {
        "type": "backend_network",
        "backend": "kary_tree",
        "backend_params": {
          "K": 4,
          "num_levels": 6,
          "terminal_radius": 0.025
        }
      },
      "save_artifacts": {
        "network": "artifacts/kary_tree_network.json",
        "void_mesh": "artifacts/kary_tree_void.stl"
      }
    }
  ],
  "composition": {
    "save_union": "artifacts/union_void.stl"
  },
  "embedding": {
    "enable": true,
    "outputs": {
      "domain_with_void": "domain_with_void.stl",
      "void_mesh": "void_union.stl"
    }
  },
  "validity": {
    "enable": true,
    "save_report": "validity_report.json"
  },
  "outputs": {
    "artifacts_dir": "artifacts",
    "named": {
      "run_report": "run_report.json"
    }
  }
}
