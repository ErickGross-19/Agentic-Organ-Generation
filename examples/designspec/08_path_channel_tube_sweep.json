  "meta": {
    "name": "08_path_channel_tube_sweep",
    "description": "Demonstrates taper channel primitives with explicit length and taper settings. Creates tapered tube channels that narrow from inlet to tip. This showcases the tube sweep primitive with taper schedule.",
    "seed": 88888,
    "input_units": "mm",
    "tags": ["taper", "channels", "tube_sweep", "path"]
  },
  "policies": {
    "resolution": {
      "input_units": "mm",
      "min_channel_diameter": 0.15,
      "min_voxels_across_feature": 4,
      "max_voxels": 2000000,
      "auto_relax_pitch": true,
      "pitch_step_factor": 1.5,
      "embed_pitch_factor": 1.0,
      "max_voxels_embed": 1500000
    },
    "domain_meshing": {
      "cache_meshes": true,
      "emit_warnings": true,
      "target_face_count": 25000
    },
    "growth": {
      "enabled": false
    },
    "collision": {
      "enabled": false
    },
    "ports": {
      "enabled": true,
      "face": "top",
